<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#334455"
    tools:context=".MainActivity">

    <TextView android:text="@string/upperString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:textSize="40dp"
        android:textStyle="italic"
        android:textColor="#ffff84b6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="68dp"
        android:id="@+id/headingid"
        android:layout_marginStart="68dp" />

    <TextView android:text="@string/lowerString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#778484ac"
        android:layout_below="@+id/headingid"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/simpletextid" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT ME"
        android:layout_centerHorizontal="true"
        android:id="@+id/submitbuttonid"
        android:layout_below="@+id/simpletextid"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ff574a70"
        android:background="#acacacac"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idEnterName"
        android:layout_below="@+id/submitbuttonid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="enter your name here"
        android:background="#ff6e724e" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/idEnterName"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
